<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
	<class name="com.pazeto.iot.shared.dto.EventDTO" table="EVENT">
		<id name="id" column="id" type="long">
			<generator class="native" />
		</id>
		<property name="requester" type="string" not-null="true" />
		<property name="ownId" type="string" not-null="true" />
		<property name="type" type="string" not-null="true" />
		<property name="date" type="timestamp" not-null="true" />
		<property name="value" type="string" />
		<property name="toEntitiy" type="string" />
		<property name="toId" type="string" />
	</class>
</hibernate-mapping>
